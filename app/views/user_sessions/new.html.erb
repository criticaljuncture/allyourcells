<% title 'Sign In' %>
 
<% semantic_form_for :user, @user_session, :url => user_session_path do |f| %>

  <% flash[:error] = f.error_messages %>
  
  <% f.inputs do %>
    <%= f.input :email %>
    <%= f.input :password, :as => :password %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button "Sign In &raquo;", :button_html => { :class => 'awesome orange' } %>
  <% end %>
<% end %>