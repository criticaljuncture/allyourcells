<% title 'Forgot Your Password?' %>

<p>Enter your email address below and instructions to reset your password will be emailed to you:</p>

<% semantic_form_for :user, :url => password_resets_path do |f| %>
  <% f.inputs do %>
    <%= f.input :email %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button "Send me a link to reset my password", :button_html => { :class => 'awesome orange' } %>
  <% end %>
<% end %> 
