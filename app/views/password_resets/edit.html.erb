<% title 'Change My Password' %>

<% semantic_form_for @user, :url => password_reset_path, :method => :put do |f| %>

  <% flash[:error] = f.error_messages %>

  <% f.inputs do %>
    <%= f.input :password %>
  <% end %>
  
  <% f.buttons do %>
    <%= f.commit_button "Set my password and log me in", :button_html => { :class => 'awesome orange' }  %>
  <% end %>
  
<% end %>